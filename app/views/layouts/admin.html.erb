<!DOCTYPE html>
<html>
  <head>
    <title>Control | <%= @page_title || "Admin" %></title>
    <%= javascript_include_tag  "application" %>
    <%= stylesheet_link_tag    "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <h1>Control Admin</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; gpc.com / Gabriel Poblete</p>
    </div>
  </body>
</html>
